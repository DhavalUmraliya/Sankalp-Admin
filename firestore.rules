rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Admin role is stored at: users/{uid} { role: "admin" }
    function isAdmin() {
      return isSignedIn()
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Allow authenticated users to read their own user doc (so the client can
    // determine admin access). Non-admins cannot write.
    match /users/{uid} {
      allow get: if isSignedIn() && request.auth.uid == uid;
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Everything else is admin-only.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}

